{

  "description": "Princess Princess Twitter.",
  "manifest_version": 2,
  "name": "PrsPrsTwitter",
  "version": "0.3.0",
  "homepage_url": "https://github.com/PrsPrsBK/prsprstwitter",
  "icons": {
    "48": "icons/icon-on.png"
  },

  "background": {
    "scripts": [
      "background/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content_scripts/entry.js"]
    }
  ],

  "options_ui": {
    "open_in_tab": true,
    "page": "options_ui/options.html"
  },

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/icon-on.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "PrsPrsTwitter"
  },

  "permissions":[
    "storage",
    "tabs"
  ]

}
