{

  "description": "Princess Princess Twitter.",
  "manifest_version": 2,
  "name": "prsprstwitter",
  "version": "0.1.7",
  "homepage_url": "https://github.com/PrsPrsBK/prsprstwitter",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "background": {
    "scripts": [
      "background/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content_scripts/entry.js"]
    }
  ],

  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icons/icon.svg"
    },
    "default_title": "PrsPrsTwitter"
  },

  "permissions":[
    "clipboardWrite",
    "tabs"
  ]

}
